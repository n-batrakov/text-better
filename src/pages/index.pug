include ../mixins/random.pug

mixin rule()
  article.rule
    .content
      h2 Title
      +paragraphs(1)
    +sample()

doctype html
html(lang="ru-RU")
  head
    title Text Better
    meta(
        http-equiv="Content-Type"
        content="text/html; charset=utf=8"
    )
    meta(
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    )
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Roboto:100,400&display=swap&subset=cyrillic")
    link(rel="shorcut icon" href="favicon.ico")
    link(rel="stylesheet" href="index.css")

  body
    nav.header
      span.menu-icon: include ../static/icons/menu.svg
      h1 Text Better
      button.btn.menu-icon(onClick="document.body.classList.toggle('dark')")
        include ../static/icons/sun.svg
      a.menu-icon(href="#"): include ../static/icons/question-circle.svg

    main.rules-list
      include ../rules/be-respectful.pug
      include ../rules/check-grammar.pug
      include ../rules/keep-it-short.pug
      include ../rules/think-before-answer.pug
      include ../rules/keep-it-simple.pug
      include ../rules/help-to-understand.pug
      include ../rules/comment-on-attachments.pug
      include ../rules/dont-chain-message.pug
      include ../rules/express-intentions-clearly.pug
      include ../rules/be-patient.pug
      include ../rules/remind-gently.pug
      include ../rules/react.pug
      include ../rules/use-emojis-with-care.pug
      include ../rules/quote-messages.pug
      include ../rules/indent-messages.pug
      include ../rules/format-messages.pug
      include ../rules/mind-the-time.pug
